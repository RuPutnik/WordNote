<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" prefHeight="300.0" prefWidth="250.0" spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.putnik.wordnote.controller.StatisticController">
    <padding>
        <Insets bottom="5" left="10" right="10" top="5" />
    </padding>
    <Label text="Статистика тренировок" />
    <ListView fx:id="listStatistics"/>
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="clearButton" mnemonicParsing="false" text="Очистить" />
        <Button fx:id="exitButton" mnemonicParsing="false" text="Выход" />
    </HBox>
</VBox>
