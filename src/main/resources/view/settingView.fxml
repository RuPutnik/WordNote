<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" prefHeight="150.0" prefWidth="400.0" spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.putnik.wordnote.controller.SettingController">
    <children>
        <Label prefHeight="17.0" prefWidth="250.0" alignment="CENTER" text="Настройки приложения"/>
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" />
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" />
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
            </rowConstraints>
            <Label text="Адрес хранилища" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="pathToWordbookTextField"/>
            <Button text="Указать файл" GridPane.columnIndex="2" GridPane.rowIndex="0" fx:id="pickFileButton"/>
        </GridPane>
        <HBox alignment="CENTER" prefHeight="88.0" prefWidth="300.0" spacing="20">
            <children>
                <Button mnemonicParsing="false" text="Сохранить" fx:id="saveButton"/>
                <Button mnemonicParsing="false" text="Отмена" fx:id="cancelButton"/>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="5" left="10" right="10" top="5" />
    </padding>
</VBox>
